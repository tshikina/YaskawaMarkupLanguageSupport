{
    "name": "yaskawa-markup-language-support",
    "displayName": "YASKAWA Markup Language (YML) Support",
    "description": "Support YML for Smart Pendant Extension of YASKAWA Motoman",
    "publisher": "tshikina",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/tshikina/YaskawaMarkupLanguageSupport.git"
    },
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.63.0"
    },
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@vscode/test-electron": "^2.1.2",
		"@types/mocha": "^9.1.0",
		"@types/node": "^14.17.0",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"eslint": "^8.10.0",
		"mocha": "^9.2.1",
		"typescript": "^4.6.2"
	},
    "categories": [
        "Programming Languages"
    ],
	"activationEvents": [
		"onLanguage:yml"
	],
	"main": "./client/out/extension",
    "contributes": {
        "languages": [{
            "id": "yml",
            "aliases": ["yml", "YML for YASKAWA Motoman"],
            "extensions": [".yml"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "yml",
            "scopeName": "source.yml",
            "path": "./syntaxes/yml.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "yml",
                "path": "./snippets/yml.code-snippets"
            }
        ],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"yaskawaMarkupLanguageClient.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"yaskawaMarkupLanguageClient.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	}
}